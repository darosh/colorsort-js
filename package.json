{
  "name": "colorsort-monorepo",
  "version": "0.0.0",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "cross-env": "^10.1.0",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "prettier": "^3.3.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.28.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "build:compute": "pnpm -r --filter='./packages/colorsort-data-sorted' run build",
    "build:compute-fast": "cross-env FAST=1 pnpm -r --filter='./packages/colorsort-data-sorted' run build",
    "build:compute-fast+no-app": "cross-env FAST=1 pnpm -r --filter='./packages/*' --filter=!'./packages/colorsort-app' run build",
    "build:no-compute": "pnpm -r --filter='./packages/*' --filter=!'./packages/colorsort-data-sorted' run build",
    "build:no-compute+no-app": "pnpm -r --filter='./packages/*' --filter=!'./packages/colorsort-data-sorted' --filter=!'./packages/colorsort-app' run build",
    "build:train": "pnpm -r --filter='./packages/colorsort-data-trained' run build && pnpm -r --filter='./packages/colorsort' run postbuild",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "dev:fast": "cross-env FAST=1 pnpm -r --parallel --filter='./packages/*' run dev",
    "dev:no-compute": "cross-env FAST=2 pnpm -r --parallel --filter='./packages/*' --filter=!'./packages/colorsort-data-sorted' run dev",
    "lint": "pnpm -r --parallel --filter='./packages/*' run lint",
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm -r --parallel --filter='./packages/*' run test"
  },
  "type": "module"
}
